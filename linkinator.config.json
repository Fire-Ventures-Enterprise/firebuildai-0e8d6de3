{
  "name": "linkinator-config",
  "scripts": {
    "link-check": "linkinator https://yourapp.lovable.app --recurse --skip '.*\\.(jpg|jpeg|gif|png|svg|ico|webp|woff|woff2|ttf|eot|pdf)$' --skip 'mailto:' --skip 'tel:' --skip 'javascript:' --timeout 30000",
    "link-check:marketing": "linkinator https://yourapp.lovable.app --recurse --skip '.*\\.(jpg|jpeg|gif|png|svg|ico|webp|woff|woff2|ttf|eot|pdf)$' --skip 'mailto:' --skip 'tel:' --skip 'javascript:' --skip '/app/' --timeout 30000",
    "link-check:portal": "linkinator https://yourapp.lovable.app/portal/estimate/test-token --skip '.*\\.(jpg|jpeg|gif|png|svg|ico|webp|woff|woff2|ttf|eot|pdf)$' --timeout 30000"
  },
  "targets": [
    {
      "url": "https://yourapp.lovable.app",
      "name": "Marketing Site",
      "recurse": true,
      "excludePatterns": ["/app/", "/admin/", "/secure-"]
    },
    {
      "url": "https://yourapp.lovable.app/app/dashboard",
      "name": "App Dashboard",
      "recurse": false,
      "auth": "required"
    },
    {
      "url": "https://yourapp.lovable.app/portal/estimate/test-token",
      "name": "Estimate Portal",
      "recurse": false
    },
    {
      "url": "https://yourapp.lovable.app/portal/invoice/test-token",
      "name": "Invoice Portal",
      "recurse": false
    }
  ]
}